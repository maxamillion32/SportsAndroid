<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_win"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nav_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_nav_bottom_margin"
                android:paddingTop="@dimen/activity_nav_top_margin"
                android:singleLine="true"
                android:text="主界面"
                android:textColor="@color/font_white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/record_list"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/record_list_img"
                android:paddingBottom="@dimen/activity_nav_bottom_margin"
                android:paddingTop="@dimen/activity_nav_top_margin" />

            <ImageView
                android:id="@+id/score_board"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/score_board_img"
                android:paddingBottom="@dimen/activity_nav_bottom_margin"
                android:paddingTop="@dimen/activity_nav_top_margin" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cream_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/shape_label_black_radius"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="总运动时间"
                android:textColor="@color/font_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_sport_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="00小时00分钟"
                android:textColor="@color/font_black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@drawable/shape_label_black_radius"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="总运动里程"
                android:textColor="@color/font_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/total_sport_legend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="00.00公里"
                android:textColor="@color/font_black"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/k_sport"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_above="@+id/logout_button"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/k_sport_img" />

                <Button
                    android:id="@id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/sel_logout_back_btn"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="登出"
                    android:textColor="@color/font_white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/bg"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_gary_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/k_unrun"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:background="@drawable/k_unrun_img" />

            <ImageView
                android:id="@+id/k_unwalk"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/k_unwalk_img" />

            <ImageView
                android:id="@+id/k_unride"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/k_unride_img" />

            <ImageView
                android:id="@+id/turn_open"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/turn_open_img" />

            <ImageView
                android:id="@id/k_sport"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/k_sport_img"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>